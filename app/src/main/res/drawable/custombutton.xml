<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#086CA2" />
            <gradient android:angle="-90" android:startColor="#086CA2" android:endColor="#3C9DD0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#3C9DD0" />
            <solid android:color="#3C9DD0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#3C9DD0" />
            <gradient android:angle="-90" android:startColor="#3C9DD0" android:endColor="#3C9DD0" />
        </shape>
    </item>
</selector>